        a(class="navbar_icon", href="/profile")
            img(class="icon", src=profIcon)
    else
        a(href="/profile" onclick="myFunction()" class="dropbtn") Регистрация
        
        div(id="myDropdown" class="dropdown-content")
            <a href="/clientReg">Клиент</a>
            <a href="/workerReg">Исполнитель </a>
