    div(class='custom-form__input-mini_bg')
        div(class='custom-form__input-mini')
            img(class='custom-form__img' src=imgFirst alt='')
            input(class='custom-form__input-mini_in form-control' type='password' placeholder=placeholderFirst name=nameFirst)
        div(class=" error")
        div(class="error registration__plug")='////'
        div(class='custom-form__input-mini')
            img(class='custom-form__img' src=imgSecond alt='')
            input(class='custom-form__input-mini_in form-control' type='password' placeholder=placeholderSecond name=nameSecond)
        div(class="error error__repeat_password")=""