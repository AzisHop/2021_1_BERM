include ../inputes/settingsInput

.settings
    div(class='settings__bg-form')
        form.settings-container(action='' id='order-create_form')
            div(class='settings__form')
                div(class='settings__column_left')
                    if isOrder
                        div(class='settings__label') Создать заказ
                        +settingsInput(require("@/static/img/title.svg").default, 'Заголовок', 'order_name', 'text')
                        div(class=" error")
                            div(class="error__message")
                            div(class="error__main")
                                div(class="error__box")
                                    ul(class="error__list")
                                        li(class= "error__help") &#8226 Penis
                                        li(class= "error__help") &#8226 Penis
                                div(class="error__arrow")
                        +settingsInput(require("@/static/img/card.svg").default, 'Бюджет', 'budget', 'text')
                        div(class=" error")

                            div(class="error__message")
                            div(class="error__main")
                                div(class="error__box")
                                    ul(class="error__list")
                                        li(class= "error__help") &#8226 Penis
                                        li(class= "error__help") &#8226 Penis
                                div(class="error__arrow")
                        +settingsInput(require("@/static/img/date.svg").default, 'Дедлайн', 'date', 'text', 'date')

                        div(class=" error")
                            div(class="error__message")
                            div(class="error__main")
                                div(class="error__box")
                                    ul(class="error__list")
                                        li(class= "error__help") &#8226 Penis
                                        li(class= "error__help") &#8226 Penis
                                div(class="error__arrow")
                        div.settings-form__input-mini_bg
                            div#select
                    else
                        if !isChange
                            div(class='settings__label') Создать вакансию
                        else
                            div(class='settings__label') Изменить вакансию
                        if isChange
                            +settingsInput(require("@/static/img/title.svg").default, 'Название вакансии', 'order_name', 'text', '', creator.title)
                        else
                            +settingsInput(require("@/static/img/title.svg").default, 'Название вакансии', 'order_name', 'text')
                        div(class=" error")
                            div(class="error__message")
                            div(class="error__main")
                                div(class="error__box")
                                    ul(class="error__list")
                                        li(class= "error__help") &#8226 Penis
                                        li(class= "error__help") &#8226 Penis
                                div(class="error__arrow")
                        if !isChange
                            +settingsInput(require("@/static/img/card.svg").default, 'Зарплата ₽', 'budget', 'text')
                        else
                            +settingsInput(require("@/static/img/card.svg").default, 'Зарплата ₽', 'budget', 'text', '', creator.salary)
                        div(class=" error")
                            div(class="error__message")
                            div(class="error__main")
                                div(class="error__box")
                                    ul(class="error__list")
                                        li(class= "error__help") &#8226 Penis
                                        li(class= "error__help") &#8226 Penis
                                div(class="error__arrow")
                        div.settings-form__input-mini_bg
                            div#select
                div(class='settings__column_right')
                    //TODO: Тоже сделать шаблоном
                    div(class='about-form__input')
                        if !isChange
                            textarea(class='settings__about__textarea form-control' placeholder='Описание' name='description')
                        else
                            textarea(class='settings__about__textarea form-control' placeholder='Описание' name='description')=creator.definition
                    div(class=" error")
                        div(class="error__message")
                        div(class="error__main" id="textAr")
                            div(class="error__box")
                                ul(class="error__list")
                                    li(class= "error__help") &#8226 Penis
                                    li(class= "error__help") &#8226 Penis
                            div(class="error__arrow")
                    // <div class="settings__img_container"></div>
                    if !isChange
                        div(class='settings-form__submit__container')
                            button(class='settings-form__submit' id='send_mess')
                                span Создать
                                img(class='settings__submit__img' src=require("@/static/img/arrow.svg").default alt='')
            if isChange
                div(class='change-form')
                    button(class='change-form__cancel')
                        img(class='change-form__cancel_arrow' src=require("@/static/img/arrow.svg").default alt='')
                        span Отменить
                    button(class='settings-form__submit' id='send_mess')
                        span Изменить
                        img(class='settings__submit__img' src=require("@/static/img/arrow.svg").default alt='')
